{
  "compilerOptions": {
      "target": "ES2022",                        
      "module": "ES2022",
      "lib": ["es6"],      
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": "src",
  },
  "include": ["src/**/*.ts", "src/index.js"],
  "exclude": ["node_modules", "**/*.spec.ts"],

  "ts-node": {
      "esm": true,
      "experimentalSpecifierResolution": "node"
  }
}
